<div class="container">
  <div class="row">
    
    <div class="col-12">
      <h5 class="d-inline-block bg-light my-5 mx-5 px-3">新規会員登録</h5></br>
    </div>
    
    <div class="col-lg-12 mx-auto">
      <%= form_with model: @customer, url: customer_registration_path, :class => "form-horizontal" do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        
        <div class="row mb-3 d-flex align-items-center">
          <label class="col-sm-2 control-label mb-0">名前</label>
          <label class="col-sm-1 control-label mb-0" style="text-align: right;">(姓)　</label>
          <%= f.text_field :last_name, :placeholder => "令和", :class => "form-control col-sm-3" %>
          <label class="col-sm-1 control-label mb-0" style="text-align: right;">(名)　</label>
          <%= f.text_field :first_name, :placeholder => "道子", :class => "form-control col-sm-3" %>
        </div>
        
        <div class="row mb-3 d-flex align-items-center">
          <label class="col-sm-2 control-label mb-0">フリガナ</label>
          <label class="col-sm-1 control-label mb-0" style="text-align: right;">(セイ)</label>
          <%= f.text_field :last_name_kana, autofocus: true, :placeholder => "レイワ", :class => "form-control col-sm-3" %>
          <label class="col-sm-1 control-label mb-0" style="text-align: right;">(メイ)</label>
          <%= f.text_field :first_name_kana, autofocus: true, :placeholder => "ミチコ", :class => "form-control col-sm-3" %>
        </div>
        
        <div class="row mb-3 d-flex align-items-center">
          <label class="col-sm-3 control-label mb-0">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
          :placeholder => "sample@example.com", :class => "form-control col-sm-3" %>
        </div>
        
        <div class="row mb-3 d-flex align-items-center">
          <label class="col-sm-3 control-label mb-0">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code, autofocus: true, :placeholder => "0000000", :class => "form-control col-sm-3" %>
        </div>
        
        <div class="row mb-3 d-flex align-items-center">
          <label class="col-sm-3 control-label mb-0">住所</label>
          <%= f.text_field :address, autofocus: true, :placeholder => "東京都渋谷区代々木神園町0-0", 
          :class => "form-control col-sm-7" %>
        </div>
        
        <div class="row mb-3 d-flex align-items-center">
          <label class="col-sm-3 control-label mb-0">電話番号(ハイフンなし)</label>
          <%= f.text_field :telephone_number, :placeholder => "00000000000", :class => "form-control col-sm-3" %>
        </div>
      
        <div class="row mb-3 d-flex align-items-center">
          <label class="col-sm-3 control-label mb-0">
            パスワード
            <% if @minimum_password_length %>
              (<%= @minimum_password_length %> 文字以上)
            <% end %>
          </label>
          <%= f.password_field :password, autocomplete: "new-password", :class => "form-control col-sm-3" %>
        </div>
      
        <div class="row mb-3 d-flex align-items-center">
          <label class="col-sm-3 control-label mb-0">パスワード(確認用)</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control col-sm-3" %>
        </div>
      
        <div class="row mb-3 d-flex align-items-center">
          <label class="col-sm-3 control-label"></label>
          <%= f.submit "新規登録", :class => "btn btn-success px-5" %>
        </div>
      <% end %>
    </div>
    
    <div class="col-12">
      <h5 class="d-inline-block bg-light my-3 mx-5 px-3">既に登録済みの方</h5>
    </div>
    
    <div class="col-10 mx-auto">
      <p class="my-0">
        <u><%= link_to 'こちら', new_customer_session_path, :id => "login-path" %></u>　からログインしてください。
      </p>
    </div>
    
  </div>
</div>

