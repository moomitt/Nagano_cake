<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, :class => "form-horizontal" do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <div class="row mb-3">
    <label class="col-sm-3 control-label">名前(姓)</label>
    <%= f.text_field :last_name, autofocus: true %>
    <label class="col-sm-1 control-label">(名)</label>
    <%= f.text_field :first_name, autofocus: true %>
  </div>
  
  <div class="row mb-3">
    <label class="col-sm-3 control-label">フリガナ(セイ)</label>
    <%= f.text_field :last_name_kana, autofocus: true %>
    <label class="col-sm-1 control-label">(メイ)</label>
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>
  
  <div class="row mb-3">
    <label class="col-sm-3 control-label">メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="row mb-3">
    <label class="col-sm-3 control-label">郵便番号(ハイフンなし)</label>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>
  
  <div class="row mb-3">
    <label class="col-sm-3 control-label">住所</label>
    <%= f.text_field :address, autofocus: true, :class => "col-sm-5" %>
  </div>
  
  <div class="row mb-3">
    <label class="col-sm-3 control-label">電話番号(ハイフンなし)</label>
    <%= f.text_field :telephone_number, autofocus: true %>
  </div>

  <div class="row mb-3">
    <label class="col-sm-3 control-label">
      パスワード
      <% if @minimum_password_length %>
        (<%= @minimum_password_length %> 文字以上)
      <% end %>
    </label>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="row mb-3">
    <label class="col-sm-3 control-label">パスワード(確認用)</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="row mb-3">
    <label class="col-sm-3 control-label"></label>
    <%= f.submit "新規登録", :class => "btn btn-sm btn-success px-5" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<p><%= link_to 'こちら', new_customer_session_path %>　からログインしてください。</p>
