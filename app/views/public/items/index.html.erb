<div class="container">
  <div class="row">
    
    <%= render 'public/homes/sidebar', genres: @genres %>
    
    <div class="col-9">
      <h3 class="my-5">商品一覧<small>（全<%= @all_items.count %>件）</small></h3>
      
      <% @items.each do |item| %>
        <div class="d-inline-block px-0 mr-3" style="width: 20%; vertical-align: top;">
          <%= link_to item_path(item.id) do %>
            <div class="mb-3" style="width:100%; height:100px">
              <%= image_tag item.get_item_image(150, 100), :class => "img_fluid mx-auto" %>
            </div>
            <p><strong><%= item.name %></strong></p>
            <p><strong>￥<%= item.with_tax_price.to_s(:delimited, delimiter: ',') %></strong></p>
          <% end %>  
        </div>
      <% end %>
     
     <div class="col-10">
       <%= paginate @items %>
     </div>
     
    </div>
  </div>
</div>
