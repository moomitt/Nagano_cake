<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="d-inline-block bg-light my-5 mx-5 px-3">ショッピングカート</h5>
      <%= link_to 'カートを空にする', destroy_all_cart_item_path, method: :delete,
      :class => "btn btn-sm btn-danger px-3" %>
    </div>
    
    <div class="col-12">
      <table class="table-bordered" style="width: 100%;">
        <thead class="table-active">
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= image_tag cart_item.item.get_item_image(80,50) %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.with_tax_price.to_s(:delimited, dilimiter: "," ) %></td>
              <td>
                <%= form_with model: cart_item, method: :patch do |f| %>
                  <%= f.select :amount, *[1..5], :class => "form-select ml-2" %>
                  <%= f.submit '変更', :class => "btn btn-sm btn-success mx-2" %>
                <% end %>
              </td>
              <td><%= cart_item.subtotal.to_s(:delimited, delimiter: "," ) %></td>
              <td><%= link_to '削除する', cart_item_path(cart_item.id), method: :delete,
              :class => "btn btn-sm btn-danger" %></td>
              <% @total_price += cart_item.subtotal %>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      
      <div class="row">
        <div class="col">
          <%= link_to '買い物を続ける', items_path, :class => "btn btn-sm btn-primary px-4 my-5" %> 
        </div>
        <div class="col">
           <table class="table-bordered my-5" style="width: 50%;">
              <tbody>
                <tr>
                  <td class="table-active">合計金額</td>
                  <td><%= @total_price.to_s(:delimited, delimiter: "," ) %></td>
                </tr>
              </tbody>
            </table>
        </div>
      </div>
      
      <div class="col-12" style="text-align: center;">
        <%= link_to '情報入力に進む', new_order_path, :class => "btn btn-success px-4" %>
      </div>

    </div>
  </div>
</div>
