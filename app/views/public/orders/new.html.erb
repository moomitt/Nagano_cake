<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="d-inline-block bg-light mt-5 mx-5 px-3">注文情報入力</h5></br>
    </div>
      
      <div class="col-12 mx-auto">
        <%= form_with model: @order, :class => "form-horizontal" do |f| %>
          <%= f.hidden_field :customer_id, :value => current_customer.id %>
          <%= f.hidden_field :postage, :value => 800 %>
          <%= f.hidden_field :total_price, :value => @total_payment.to_i %>
          
        <h6 class="mt-3">支払方法</h6>
          <%= f.radio_button :payment_method, "credit_card", :class => "ml-5" %>
          <%= f.label :payment_method, "クレジットカード" %></br>
          
          <%= f.radio_button :payment_method, "transfer", :class => "ml-5" %>
          <%= f.label :payment_method, "銀行振込" %>
        
        <h6 class="mt-3">お届け先住所</h6>
        <div class="ml-5 mb-3">
          <%= f.radio_button :select_address, "0" %>
          <%= f.label :select_address, "ご自身の住所" %></br>
          <p class="ml-4">
            〒<%= current_customer.postal_code %> <%= current_customer.address %></br>
            <%= current_customer.last_name %><%= current_customer.first_name %>
          </p>
        </div>
        
        <div class="ml-5 mb-3">
          <%= f.radio_button :select_address, "1" %>
          <%= f.label :select_address, "登録済住所から選択" %></br>
          <div class="ml-4">
            <%= f.select :address_id,
            options_from_collection_for_select(Address.where(customer_id: current_customer.id), :id, :address_display),
            :class => "ml-4" %>
          </div>
        </div>
        
        <div class="ml-5 mb-3">
          <%= f.radio_button :select_address, "2" %>
          <%= f.label :select_address, "新しいお届け先" %></br>
          <div class="ml-2">
            <%= f.label :postal_code, "郵便番号(ハイフンなし)", :class => "col-3" %>
            <%= f.text_field :postal_code, :placeholder => "0000000", :class => "col-3 form-control d-inline-block" %></br>
            <%= f.label :address, "住所", :class => "col-3" %>
            <%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0", :class => "col-7 form-control d-inline-block" %></br>
            <%= f.label :name, "宛名", :class => "col-3" %>
            <%= f.text_field :name, :placeholder => "令和道子", :class => "col-3 form-control d-inline-block" %>
          </div>
        </div>
        
        <div style="text-align: center;">
          <%= f.submit '確認画面へ進む', :class => "btn btn-primary px-4" %>
        </div>
          
          
        <% end %>
      </div>
      
    </div>
  </div>
</div>

