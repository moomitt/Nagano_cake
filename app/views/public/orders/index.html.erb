<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="d-inline-block bg-light my-5 mx-5 px-3">注文履歴一覧</h5>
    </div>
    
    <div class="col-12">
      <table class="table-bordered" style="width: 100%;">
        <thead class="table-active">
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                〒<%= order.postal_code %></br>
                <%= order.address %></br>
                <%= order.name %>
              </td>
              <td>
                <% @order_datails.where(order_id: order.id).each do |order_detail| %>
                  <%= order_detail.item.name %></br>
                <% end %>
              </td>
              <td><%= order.total_price.to_s(:delimited, delimiter: ',') %></td>
              <td>
                <% if order.status == "wait_payment" %>
                  入金待ち
                <% elsif order.status == "" %>
                  入金確認
                <% elsif order.status == "making" %>
                  製作中
                <% elsif order.status == "" %>
                　発送準備中
                <% elsif order.status == "" %>
                  発送済み
                <% end %>
              </td>
              <td><%= link_to '表示する', order_path(order.id), :class => "btn btn-sm btn-primary" %></td>
              <td><%= link_to '削除', order_path(order.id), method: :delete, :class => "btn btn-sm btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      
    </div>
  </div>
</div>

