<div class="container">
  <div class="row">
    <div class="col-12">
      <label class="my-5">商品新規登録</label>
      
      <%= form_with model: @item, url: new_admin_item_path do |f| %>
      <div class="form-group">
        <label for="item_image">商品画像</label>
        <%= f.file_field :item_image %>
      </div>
      <div class="form-group">
        <label for="item_name">商品名</label>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <label for="item_image">商品説明</label>
        <%= f.text_area :introduction %>
      </div>
      <div class="form-group">
        <label for="item_image">商品画像</label>
        <%= f. :genre %>
      </div>
      

        <%= f.submit "新規登録", :class => "btn btn-success" %>
      <% end %>
      
    </div>
  </div>
</div>
