<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="d-inline-block bg-light my-5 mx-5 px-3">商品新規登録</h5></br>
    </div>
      
    <div class="col-9 mx-auto">
      <%= form_with model: @item, url: admin_items_path, :class => "form-horizontal" do |f| %>
        
        <div class="row mb-3 d-flex align-items-center">
          <label class="col-sm-2 control-label mb-0">商品画像</label>
          <div class="col-sm-5 pr-0">
            <%= f.file_field :item_image %>
          </div>
        </div>
        
        <div class="row mb-3 d-flex align-items-center">
          <label class="col-sm-2 control-label mb-0">商品名</label>
          <div class="col-sm-5 pr-0">
            <%= f.text_field :name, :placeholder => "商品名", :class => "form-control" %>
          </div>
        </div>
        
        <div class="row mb-3 d-flex align-items-start">
          <label class="col-sm-2 control-label mt-2">商品説明</label>
          <div class="col-sm-5 pr-0">
            <%= f.text_area :introduction, :placeholder => "ここに説明文を記述します",
            :class => "form-control", :rows => "5" %>
          </div>
        </div>
        
        <div class="row mb-3 d-flex align-items-center">
          <label class="col-sm-2 control-label mb-0">ジャンル</label>
          <div class="col-sm-5 pr-0">
            <%= f.select :genre_id, @genres.map{ |genre| [genre.name, genre.id] },
            include_blank: "-- 選択してください --" %>
          </div>
        </div>
        
        <div class="row mb-3 d-flex align-items-center">
          <label class="col-sm-2 control-label mb-0">税抜価格</label>
          <div class="col-sm-5 pr-0">
            <%= f.text_field :price, :placeholder => "1000", :class => "form-control" %>
          </div>
          <div class="col-sm-1 pl-1">
            円
          </div>
        </div>
        
        <div class="row mb-4 d-flex align-items-center">
          <label class="col-sm-2 control-label mb-0">販売ステータス</label>
          <div class="col-sm-5 form-check form-check-inline px-2">
            <%= f.radio_button :is_active, :true, :class => "form-check-input mx-2" %>
            <label class="form-check-label">販売中　</label>
            <%= f.radio_button :is_active, :false, :class => "form-check-input mx-2" %>
            <label class="form-check-label">販売停止中</label>
          </div>
        </div>
        
        <div class="row mb-5 d-flex align-items-center">
          <label class="col-sm-2 control-label mb-0"></label>
          <div class="col-5" style="text-align: center;">
            <%= f.submit "新規登録", :class => "btn btn-success mx-5 py-2 px-5 mb-5" %>
          </div>
        </div>
        
      <% end %>
    </div>
    
  </div>
</div>
