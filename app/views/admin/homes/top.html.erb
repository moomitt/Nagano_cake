<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="d-inline-block bg-light my-5 mx-5 px-3">注文履歴一覧</h5></br>
    </div>
    
    <div class="col-10 mx-auto">
      <table class="table">
        <thead class="table-active">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><u><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></u></td>
              <td><%= order.customer.last_name + order.customer.first_name %></td>
              <td>
                <% @amount = 0 %>
                <% @order_details.where(order_id: order.id).each do |order_datail| %>
                  <% @amount += order_datail.amount %>
                <% end %>
                <%= @amount %>
              </td>
              <td>
                <% if order.status == "wait_payment" %>
                  入金待ち
                <% elsif order.status == "" %>
                  入金確認
                <% elsif order.status == "making" %>
                  製作中
                <% elsif order.status == "" %>
                　発送準備中
                <% elsif order.status == "" %>
                  発送済み
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <%= paginate @orders %>
    </div>
    
  </div>
</div>


