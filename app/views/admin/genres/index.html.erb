<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="d-inline-block bg-light my-5 mx-5 px-3">ジャンル一覧・追加</h5></br>
    </div>
    
    <div class="col-11 pl-5">
      <%= form_with model: @genre, url: admin_genres_path, :class => "form-horizontal" do |f| %>
        <div class="row mb-3 d-flex align-items-center">
          <label class="col-sm-2">ジャンル名</label>
          <%= f.text_field :name, :placeholder => "ジャンル名", :class => "form-control col-sm-3"  %>
          <%= f.submit "新規登録", :class => "btn btn-success ml-5 px-4" %>
        </div>
      <% end %>
    </div>
        
    <div class="col-5 pl-5">
      <div class="row mb-3 d-flex align-items-center">
        <table class="table mt-5">
          <thead class="table-active">
            <th style="text-align: center;">ジャンル</th>
            <th style="width: 35%;"></th>
          </thead>
          <tbody>
            <% @genres.each do|genre| %>
              <tr>
                <td class="align-middle"><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre.id), :class => "btn btn-sm btn-success px-3 py-2" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
        


    
  </div>
</div>
