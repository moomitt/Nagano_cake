<div class="container">
  <div class="row">
    <div class="col-12">
      <h3 class="my-5">ジャンル一覧・追加</h3>
      
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <%= f.label 'ジャンル名' %>
        <%= f.text_field :name, autofocus: true, autocomplete: "ジャンル名" %>
        <%= f.submit "新規登録", :class => "btn btn-success" %>
      <% end %>
      
      <table class="table">
        <thead>
          <th>ジャンル</th>
          <th></th>
        </thead>
        <tbody>
          <% @genres.each do|genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), :class => "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>
