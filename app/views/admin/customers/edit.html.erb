<div class="container">
  <div class="row">
    <div class="col-12">
      <label class="my-5 bg-secondary"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</label>
      
      <%= form_with model: @customer, url: admin_customer_path(@customer.id), :class => "form-horizontal" do |f| %>
  
        <div class="row mb-3">
          <label class="col-sm-3 control-label">名前(姓)</label>
          <%= f.text_field :last_name, autofocus: true %>
          <label class="col-sm-1 control-label">(名)</label>
          <%= f.text_field :first_name, autofocus: true %>
        </div>
  
        <div class="row mb-3">
          <label class="col-sm-3 control-label">フリガナ(セイ)</label>
          <%= f.text_field :last_name_kana, autofocus: true %>
          <label class="col-sm-1 control-label">(メイ)</label>
          <%= f.text_field :first_name_kana, autofocus: true %>
        </div>
        
        <div class="row mb-3">
          <label class="col-sm-3 control-label">郵便番号</label>
          <%= f.text_field :postal_code, autofocus: true %>
        </div>
        
        <div class="row mb-3">
          <label class="col-sm-3 control-label">住所</label>
          <%= f.text_field :address, autofocus: true, :class => "col-sm-5" %>
        </div>
        
        <div class="row mb-3">
          <label class="col-sm-3 control-label">電話番号</label>
          <%= f.text_field :telephone_number, autofocus: true %>
        </div>
        
        <div class="row mb-3">
          <label class="col-sm-3 control-label">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="row mb-3">
          <label class="col-sm-3 control-label">会員ステータス</label>
          <%= f.radio_button :is_deleted, :false %> 有効　
          <%= f.radio_button :is_deleted, :true %> 退会
        </div>
        
        <div class="row mb-3">
          <label class="col-sm-3 control-label"></label>
          <%= f.submit "変更を保存", :class => "btn btn-sm btn-success px-5" %>
        </div>
        
      <% end %>
      
    </div>
  </div>
</div>
    
