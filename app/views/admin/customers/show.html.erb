<div class="container">
  <div class="row">
    <div class="col-12">
      <label class="my-5 bg-secondary">会員一覧</label>
      
      <table class="table">
        <thead>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </thead>
        <tbody>
          <% @customers.each do|customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.last_name+customer.first_name, admin_customer_path(customer.id) %></td>
              <td><%= customer.email %></td>
              <% if customer.is_deleted? %>
                <td class="text-secondary"><strong>退会</strong></td>
              <% else %>
                <td class="text-success"><strong>有効</strong></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>
